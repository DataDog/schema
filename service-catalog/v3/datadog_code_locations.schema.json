{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/DataDog/schema/main/service-catalog/v3/datadog_code_locations.schema.json",
  "type": "array",
  "description": "Schema for mapping source code locations to an entity",
  "additionalProperties": false,
  "properties": {
    "items": {
      "properties": {
        "repositoryURL": {
          "description": "The repository path of the source code of the entity",
          "type": "string",
          "pattern": "url"
        },
        "paths": {
          "type": "array",
          "description": "The paths (glob) to the source code of the service",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
